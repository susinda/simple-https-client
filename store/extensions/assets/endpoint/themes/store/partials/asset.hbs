<script>
    var isSocial = ('{{features.social.enabled}}' == 'true');
</script>
<div class="asset-description">
    {{#with assets}}
        {{#with attributes}}
            <div class="asset-description-header">
                <div class="row">
                    <div class="span9">
                        <div class="asset-banner">
                            <img src='{{url ""}}/extensions/assets/endpoint/themes/store/imgs/banner.png'>
                        </div>
                        <div class="asset-introduction-box">
                            <img src='{{url ""}}/extensions/assets/endpoint/themes/store/imgs/thumbnail.png'>

                            <h3>{{overview_name}}</h3>
                            <small> {{t "Version"}} {{overview_version}}</small>
                            <small> {{t "by"}} {{overview_provider}} </small>
                    <span class="asset-rating">
                    <div style="width:{{../ratingPx}}px"></div>
                    </span>
                            {{>asset-utilization ../..}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="assetp-properties">
                <ul class="nav nav-tabs" id="assetp-tabs" data-aid="{{../path}}">
                    <li class="active">
                        <a href="#tab-properties" data-toggle="tab" data-type="basic">{{t "Description"}}</a>
                    </li>
                    <li>
                        <a href="#tab-reviews" data-toggle="tab" data-type="comments">{{t "User Reviews"}}</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab-properties">
                        <div class="content">
                            {{>overview ..}}
                        </div>

                    </div>
                   <div class="tab-pane" id="tab-share">
                <div class="content">
                    {{>share ..}}
                </div>
            </div>
            <div class="tab-pane" id="tab-reviews">
                        {{#if ../features.social.enabled}}
                            <iframe name="socialIfr" id="socialIfr"
                                src="{{../../features.social.keys.tenantedSocialAppUrl}}?target={{../../rxt.shortName}}:{{../id}}&user={{../../cuser.username}}"
                                width="100%" height="100%" style="height: 300px;" data-script="{{../../features.social.keys.socialScriptSource}}" data-script-type="{{../../features.social.keys.socialScriptType}}"></iframe>
                         {{/if}}
                        {{#if ../inDashboard}}
                             <div id="comment-content" class="content"></div>
                        {{else}}
                            <div id="comment-content" class="content user-review"></div>
                        {{/if}}
                         
            </div>
                </div>
            </div>
        {{/with}}
    {{/with}}
</div>